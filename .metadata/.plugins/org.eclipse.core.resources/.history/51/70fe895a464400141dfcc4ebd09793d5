import java.util.Scanner;

public class Whatpoliticalphilosopherareyou {

	public static void main(String[] args) {
		int hobbes = 0;
		int rousseau = 0;
		int nietzsche = 0;
		int marx = 0;
		int plato = 0;
		Scanner peopleAnimal = new Scanner(System.in);
		System.out.println("Do you think people are nothing more than intelligent animals? (answer yes or no)");
		String animal = peopleAnimal.nextLine();
		if (animal.equals("yes")){
					hobbes +=3;
					marx +=3;
					nietzsche +=2;
					rousseau -=1;
					plato -=3;
				}
		else if (animal.equals("no")){
					hobbes -=3;
					marx -=3;
					nietzsche -=2;
					rousseau +=1;
					plato +=3; }

		Scanner inequality = new Scanner(System.in);
		System.out.println("Do you think inequality among people is natural?");
		String inequality = inequality.nextLine();
		if (inequality.equals ("yes")){
			hobbes +=1;
			marx -=3;
			nietzsche +=3;
			rousseau -=2;
			plato +=2;
			}
		else if (inequality.equals ("no")){
			hobbes -=1;
			marx +=3;
			nietzsche -=3;
			rousseau +=2; 
			plato -=2;
		}
		Scanner individualvsSociety = new Scanner(System.in);
		System.out.println("Do you think (A)the individual is more important than society, or (B)society is more important than the individual?");
		String individual= individualvsSociety.nextLine();
		if (individual = ("A")){
			hobbes +=3;
			marx +=2;
			nietzsche -=3;
			}
		else if(individual = ("B")){
			hobbes -=3;
			marx -=2;
			nietzsche +=3;
		}
		
			
		
		
	}
	
	
	//is society capable of improvement, or does it just change without getting better?
	
