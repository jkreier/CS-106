import java.util.Scanner;

public class Whatpoliticalphilosopherareyou {

	public static void main(String[] args) {
		int hobbes = 0;
		int rousseau = 0;
		int nietzsche = 0;
		int marx = 0;
		int plato = 0;
		Scanner peopleAnimal = new Scanner(System.in);
		System.out.println("Do you think people are nothing more than intelligent animals? (answer yes or no)");
		String answer = peopleAnimal.nextLine();
		if (answer.equals("yes")){
					hobbes +=3;
					marx +=3;
					nietzsche +=2;
					rousseau -=1;
					plato -=3;
				}
		else if (answer.equals("no")){
					hobbes -=3;
					marx -=3;
					nietzsche -=2;
					rousseau +=1;
					plato +=3; }

		Scanner inequality = new Scanner(System.in);
		System.out.println("Do you think inequality among people is natural?");
		string answer = inequality.nextLine();
		if (answer.equals ("yes")){
			hobbes +=1;
			marx -=3;
			nietszche +=3;
			rousseau -=2;
			plato +=2;
			}
		else if (answer.equals ("no")){
			hobbes -=1;
			marx +=3;
			nietzsche -=3;
			plato -=2;
		}
		
		}
	
	
	
	
